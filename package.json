    "@octokit/action": "^4.0.4",
    "parse-diff": "^0.9.0",
    "path": "^0.12.7",
    "simple-git": "3.15.1"
  },
  "devDependencies": {
    "@swc/jest": "0.2.21",
    "@types/jest": "28.1.1",
    "@types/node": "^18.13.0",
    "@vercel/ncc": "^0.36.1",
    "jest": "29.3.1",
    "prettier": "2.8.2",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "overrides": {
